    "scripts": {
        "start": "ts-node index.ts",
        "dev": "nodemon index.ts",
        "build": "tsc && cp -r api/spec dist/api/spec && cp -r database/memory/migrations dist/database/memory/migrations",
        "test": "vitest run",
        "test:watch": "vitest",
        "test:ui": "vitest --ui",
