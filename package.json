        "db:generate": "drizzle-kit generate",
        "generate": "openapi-code-generator --input api/spec/openapi.yaml --output api --template typescript-express",
        "generate:clean": "find api -type f -name '*.ts' -delete",
        "format": "prettier --write '**/*.{js,jsx,ts,mts,tsx,json,css,md}'"
    },
